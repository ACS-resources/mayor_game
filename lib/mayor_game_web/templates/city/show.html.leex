<div>
      <b>User name:</b> <%= @user.nickname %>
    </div>
    <div>
      <b>city title:</b> <%= @city.title %>

      <b>city region:</b> <%= @city.region %>
      <b>detail houses:</b> <%= @city.detail.houses %>
      <b>detail schools:</b> <%= @city.detail.schools %>
      <b>detail roads:</b> <%= @city.detail.roads %>
      <b>ping:</b> <%= @ping %>
      <b>is_user_mayor:</b> <%= @is_user_mayor %>
    </div>
    <%= if @is_user_mayor do %>
    <div>
      <%= f = form_for :message, "#", [phx_submit: "add_citizen"] %>
        <%= label f, :content %>
        <%= text_input f, :content %>
        <%= submit "Send" %>
      </form>
    </div>
    <% end %>
    <div>
      <b>citizens:</b>
      <%= for citizen <- @citizens do %>
        <div>
          <b><%= citizen.name %></b> money: <%= citizen.money %>
        </div>
      <% end %>
    </div>
